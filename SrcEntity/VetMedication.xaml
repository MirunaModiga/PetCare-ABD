                <Grid x:Name="diagnostic" Margin="-50,-2,342.2,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="169*"/>
                        <ColumnDefinition Width="142*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Diagnostic" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Diagnose" VerticalAlignment="Top" Height="28" Width="221" LineHeight="16" FontFamily="Sitka Display Semibold" FontSize="20" Cursor="None" Foreground="#FF9497A7" Margin="0,-22,62.4,0" Grid.ColumnSpan="2"/>
